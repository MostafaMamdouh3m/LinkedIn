@model UserViewModel



<div class="modal fade " id="edit_education" tabindex="-1" role="dialog" aria-labelledby="edit_education">
    <form class="Edit_Education_form">
        <div class="modal-dialog" role="document" style="width: 744px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p class="modal-title" id="myModalLabel" style="color: rgba(0, 0, 0, 0.6); font-size:140%;">Edit Education</p>
                </div>

                <div class="modal-body-editeducation">


                    @Html.HiddenFor(e => e.UserEducation.Id)


                    <div class="form-group">
                        @Html.LabelFor(m => m.UserEducation.Education.Name, new { @class = "labels required" })
                        @Html.DropDownListFor(m => m.UserEducation.Fk_Education, new SelectList(Model.Educations, "Id", "Name"), "Select School/University", new { @class = "form-control largedroplist" })
                       @* @Html.ValidationMessageFor(m => m.UserEducation.Education.Name, "", new { @class = "notvalid" })*@
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserEducation.Education.Type, new { @class = "labels" })
                        @Html.EnumDropDownListFor(e => e.UserEducation.Education.Type, "Select Type", new { @class = "form-control largedroplist" })
                        @Html.ValidationMessageFor(m => m.UserEducation.Education.Type, "", new { @class = "notvalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserEducation.Degree, new { @class = "labels" })
                        @Html.TextBoxFor(m => m.UserEducation.Degree, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserEducation.Degree, "", new { @class = "notvalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserEducation.FieldOfStudy, new { @class = "labels" })
                        @Html.TextBoxFor(m => m.UserEducation.FieldOfStudy, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserEducation.FieldOfStudy, "", new { @class = "notvalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserEducation.Grade, new { @class = "labels" })
                        @Html.EnumDropDownListFor(m => m.UserEducation.Grade, "Select Your Grade", new { @class = "form-control largedroplist" })
                        @Html.ValidationMessageFor(m => m.UserEducation.Grade, "", new { @class = "notvalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserEducation.Activities, new { @class = "labels" })
                        @Html.TextAreaFor(m => m.UserEducation.Activities, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserEducation.Activities, "", new { @class = "notvalid" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserEducation.Description, new { @class = "labels" })
                        @Html.TextAreaFor(m => m.UserEducation.Description, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserEducation.Description, "", new { @class = "notvalid" })
                    </div>

                    <div class="form-group  duration-editeducation">

                        <div class="startdate">

                            @Html.LabelFor(m => m.UserEducation.StartDate, new { @class = "labels" })
                            @Html.EditorFor(m => m.UserEducation.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.UserEducation.StartDate, "", new { @class = "notvalid" })
                        </div>

                        <div class="enddate">
                            @Html.LabelFor(m => m.UserEducation.EndDate, new { @class = "labels" })
                            @Html.EditorFor(m => m.UserEducation.EndDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.UserEducation.EndDate, "", new { @class = "notvalid" })
                        </div>

                    </div>

                </div>

                <div class="modal-footer">

                    <input type="button" id="Edit_Education_Submit" value="Save" class="btn btn-primary" style="border-radius:3px;  padding-top:5px; padding-bottom:5px; padding-left:15px;  padding-right:15px; " />

                </div>
            </div>
        </div>
</form>
    </div>



