@model Message

<div>
    <div class="message_board_pics">
        <div>
            @if (@Model.Sender.ProfilePicture == null || @Model.Sender.ProfilePicture == "")
            {
                <img src="~/images/default.png" />
            }
            else
            {
                <img src="@Model.Sender.ProfilePicture">
            }
        </div>
    </div>
    <div class="message_board_body">
        <div>
            <p><span>@Model.Sender.FirstName @Model.Sender.LastName</span>&nbsp;</p>
            <p>&nbsp;<span>@Model.Date.ToShortTimeString()</span></p>
        </div>
        <div>@Model.Body</div>
    </div>
</div>