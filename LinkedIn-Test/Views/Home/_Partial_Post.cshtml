@model Post

@{
    ViewBag.Title = "Index";
}

<div class="Post">
    <div class="post_info">
        <div>
            @{
                if (Model.PostOwner.ProfilePicture == null)
                {
            <img id="img-OwnerPost" src="~/Content/images/default.png" class="img-circle" alt="Cinque Terre" width="40" height="40">

                }
                else
                {
            <img id="img-OwnerPost" src="~/Content/images/@Model.PostOwner.ProfilePicture" class="img-circle" alt="Cinque Terre" width="40" height="40">

                }
            }
            <div id="profil_name"> <a href="" id="ProfileNameLink">@Model.PostOwner.FirstName @Model.PostOwner.LastName</a>
            </div>
            <div id="profil_job"> @Model.PostOwner.CurrentPosition</div>
        </div>
    </div>
    <div class="post_caption">
        <p class="text-justify">
            @Model.Body
        </p>
    </div>
    @*<div class="post_media">
        <img id="" src="~/Content/images/012.jpg" width="550" height="300">
    </div>*@

    <div class="post_Engagment01">
        <div id="like_comment_share">
            <span id="like-count-@Model.Id" isLiked="false">5</span>
            <span id="LikeText">like</span>
        </div>
    </div>
    <div class="post_Engagment02">
        <div class="like_comment_share">
            <button class="btn btn-default" onclick="addLike(@Model.Id)" type="button" style="border:none">
                Like <span class="glyphicon glyphicon-thumbs-up"></span>
            </button>
            <button class="btn btn-default" onclick="WriteComment(@Model.Id)" id="@Model.Id" PostId="@Model.Id" type="button" style="border:none" aria-expanded="true">
                Comment
            </button>
            <button class="btn btn-default" type="button" style="border:none" aria-haspopup="true"
                    aria-expanded="false">
                Share <span class="glyphicon glyphicon-share-alt"></span>
            </button>
        </div>
        <div class="CommentTextArea1">
            <textarea id="TextArea-@Model.Id" class="CommentTextArea"></textarea>
        </div>
    </div>
    @*ListOfCommnets*@
    <div id="ListOfCommnets-@Model.Id" CommentList="@Model.Id" class="CommentList">
        @if (Model.Comments != null)
        {
            for (int i = 0; i < Model.Comments.Count; i++)
            {
                @Html.Partial("_PartialComment", Model.Comments[i]);
            }
        }

    </div>
</div>
