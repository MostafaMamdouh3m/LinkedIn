@model UserViewModel



<div class="modal fade " id="edit_skill" tabindex="-1" role="dialog" aria-labelledby="edit_skill">
    <form class="Edit_Skill_form">
        <div class="modal-dialog" role="document" style="width: 744px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p class="modal-title" id="myModalLabel" style="color: rgba(0, 0, 0, 0.6); font-size:140%;">Edit Skill</p>
                </div>

                <div class="profile_modal_body">


                    @Html.HiddenFor(e => e.UserSkill.Id)
                    @Html.HiddenFor(e => e.UserSkill.Fk_Skill)

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserSkill.Skill.Name)
                        @Html.TextBoxFor(m => m.UserSkill.Skill.Name, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserSkill.Skill.Name, "", new { @class = "notvalid" })
                        <div id="profile_skill_menu_underlay" class="hidden">
                            <div id="profile_skill_menu">
                                @Html.Partial("_Partial_Skill_Search", new List<Skill>())
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserSkill.Level, new { @class = "labels" })
                        @Html.EnumDropDownListFor(e => e.UserSkill.Level, "Select Level", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserSkill.Level, "", new { @class = "notvalid" })
                    </div>



                </div>

                <div class="modal-footer">

                    <input type="button" id="Edit_Skill_Submit" value="Save" class="btn btn-primary" style="border-radius:3px;  padding-top:5px; padding-bottom:5px; padding-left:15px;  padding-right:15px; " />

                </div>
            </div>
        </div>
</form>
</div>



