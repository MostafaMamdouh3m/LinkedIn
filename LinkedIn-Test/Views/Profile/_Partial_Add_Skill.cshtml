

@model UserViewModel
@{

    AjaxOptions Add_Skill_ajaxopt = new AjaxOptions()
    {
        HttpMethod = "post",
        UpdateTargetId = "skill_data",
        InsertionMode = InsertionMode.ReplaceWith,
        OnSuccess = "$('#add_skill').modal('hide')"

    };
}



@using (Ajax.BeginForm("AddSkillAjax", "Profile", Add_Skill_ajaxopt, new { @class = "Add_Skill_form" }))
{
    <div class="modal fade " id="add_skill" tabindex="-1" role="dialog" aria-labelledby="add_skill">
        <div class="modal-dialog" role="document" style="width: 765px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p class="modal-title" id="myModalLabel" style="color: rgba(0, 0, 0, 0.6); font-size:140%;">Add Skill</p>
                </div>

                @Html.HiddenFor(e => e.UserSkill.Fk_User)

                <div class="modal-body-addskill">

                    <div class="form-group">
                        @Html.LabelFor(m => m.Skill.Name, new { @class = "labels" })
                        @Html.TextBoxFor(m => m.Skill.Name, new { @class = "form-control" ,id="add-skill-search", autocomplete = "off"})
                        @Html.ValidationMessageFor(m => m.Skill.Name, "", new { @class = "notvalid" })
                        <div id="profile_skill_menu_underlay" class="hidden">
                            <div id="profile_skill_menu">
                                @Html.Partial("_Partial_Skill_Search", new List<Skill>())
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserSkill.Level, new { @class = "labels" })
                        @Html.EnumDropDownListFor(e => e.UserSkill.Level,"Select Level", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserSkill.Level, "", new { @class = "notvalid" })
                    </div>

                </div>

                <div class="modal-footer">

                    <input type="submit" value="Save" class="btn btn-primary" style="border-radius:3px;  padding-top:5px; padding-bottom:5px; padding-left:15px;  padding-right:15px; " />

                </div>
            </div>
        </div>
    </div>

}

