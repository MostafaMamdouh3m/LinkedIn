@model UserViewModel
@{
    AjaxOptions Add_Experience_ajaxOptions = new AjaxOptions()
    {
        HttpMethod = "POST",
        UpdateTargetId = "experience",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "$('#add_experienceModal').modal('hide')"
    };
}

@using (Ajax.BeginForm("AddWorkplaceAjax", "Profile", Add_Experience_ajaxOptions, new { @class = "Add_Education_form" }))
{
    <!-- Modal -->
    <div class="modal fade" id="add_experienceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document" style="width: 765px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add Experience</h4>
                </div>


                <div class="profile_modal_body">
                    @Html.HiddenFor(e => e.UserWorkplace.Fk_User)

                    <!--Company-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserWorkplace.Title, new { @class = "labels" })
                        @Html.TextBoxFor(m => m.UserWorkplace.Title, new { @class = "form-control largetextbox", placeholder = "Ex: Manager" })
                        @Html.ValidationMessageFor(m => m.UserWorkplace.Title)
                    </div>

                    <!--Company-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserWorkplace.Workplace.Name, new { @class = "labels" })
                        @Html.DropDownListFor(m => m.UserWorkplace.Fk_Workplace, new SelectList(Model.Workplaces, "Id", "Name"), "Select your Company", new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserWorkplace.Workplace.Name)
                    </div>
                    @*<div class="form-group">
                            @Html.LabelFor(m => m.Workplace.Name, new { @class = "labels" })
                            @Html.TextBoxFor(m => m.Workplace.Name, new { @class = "form-control largetextbox", placeholder = "Ex: Microsoft" })
                            @Html.ValidationMessageFor(m => m.Workplace.Name)
                        </div>*@

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserWorkplace.Location, new { @class = "labels" })
                        @Html.TextBoxFor(m => m.UserWorkplace.Location, new { @class = "form-control largetextbox", placeholder = "Ex: London, United Kingdom" })
                        @Html.ValidationMessageFor(m => m.UserWorkplace.Location)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserWorkplace.StartDate, new { @class = "labels " })
                        @Html.TextBoxFor(m => m.UserWorkplace.StartDate, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserWorkplace.StartDate)
                    </div>

                    <div>
                        <label for="currentwork">I currently work in role</label>
                        <input type="checkbox" name="currentwork" aria-label="...">
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserWorkplace.EndDate, new { @class = "labels  " })
                        @Html.TextBoxFor(m => m.UserWorkplace.EndDate, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserWorkplace.EndDate)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserWorkplace.Industry, new { @class = "labels" })
                        @Html.DropDownListFor(m => m.UserWorkplace.Industry, new SelectList(new[] { "Architecture Engineering", "Civil Engineering", "Medicine", "Commerce", "Art/Composition", "Other" }), new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserWorkplace.Industry)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserWorkplace.HeadLine, new { @class = "labels" })
                        @Html.TextAreaFor(m => m.UserWorkplace.HeadLine, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserWorkplace.HeadLine)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.UserWorkplace.Description, new { @class = "labels" })
                        @Html.TextAreaFor(m => m.UserWorkplace.Description, new { @class = "form-control largetextbox" })
                        @Html.ValidationMessageFor(m => m.UserWorkplace.Description)
                    </div>
                </div>


                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" style="border-radius:3px;  padding-top:5px; padding-bottom:5px; padding-left:15px;  padding-right:15px; ">Save</button>
                </div>
            </div>
        </div>
    </div>
}